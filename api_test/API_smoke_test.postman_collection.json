		{
			"name": "upload device data",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "8b9cf43a-8c79-47b0-9e17-02f9fb0214ba",
						"exec": [
							"const uuid = require('uuid');",
							"pm.environment.set(\"uploadDeviceDataItemId\", uuid.v4());",
							"",
							"const moment = require('moment');",
							"var date = moment();",
							"",
							"pm.variables.set(\"uploadDeviceDataItemTime\", date.format());",
							"pm.variables.set(\"uploadDeviceDataItemDeviceTime\", date.format('YYYY-MM-DDThh:mm:ss'));",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "d0b1561e-efe4-496b-89f7-986d2badf171",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
