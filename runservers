}

tp_mongo() {
    echo "Starting mongod"
    mongod > server.log 2>&1 &
    export TP_mongo=$!
}

# hakken
tp_hakken() {
    export ANNOUNCE_HOST=localhost
    export PORT=8000
    export DISCOVERY_HEARTBEAT_INTERVAL=10000
    export LOG_HEARTBEATS=false

    tp_start_server hakken coordinator.js
}

# shoreline
tp_shoreline() {
    tp_go_server shoreline
}

